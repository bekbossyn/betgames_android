<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutGroup"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/colorLightTransparent">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imgGroupIndicator"
        android:src="@drawable/arrow_right"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGameName"
        android:text="Баккара"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_md"
        android:textAllCaps="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxGroup"
            android:layout_marginLeft="8dp"
            android:focusable="false"
            android:buttonTint="@color/textColorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLastGame"
            android:text="2112"
            android:textSize="@dimen/text_sm"
            android:textColor="@color/textColorPrimary"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/checkBoxGroup"/>
    </RelativeLayout>
</LinearLayout>