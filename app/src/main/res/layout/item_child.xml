<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutChild"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="8dp"
    android:background="@color/colorDarkTransparent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDataName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Число от 13 до 18"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/text_md"
        android:textColor="@color/textColorSecondary"/>

    <TextView
        android:text="12"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/checkBoxChild"
        android:layout_toStartOf="@+id/checkBoxChild"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:textAlignment="center"
        android:id="@+id/txtDataCurrent"
        android:textSize="@dimen/text_md"
        android:textColor="@color/textColorGreen"/>

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editDataUser"
        android:inputType="phone"
        android:ems="10"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        android:textAllCaps="true"
        android:maxLength="4"
        android:textSize="@dimen/text_md"
        android:textColor="@color/textColorSecondary"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:layout_alignBaseline="@+id/txtDataCurrent"
        android:layout_alignBottom="@+id/txtDataCurrent"
        android:layout_toLeftOf="@+id/txtDataCurrent"
        android:layout_toStartOf="@+id/txtDataCurrent" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxChild"
        android:layout_marginLeft="8dp"
        android:buttonTint="@color/textColorSecondary"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>